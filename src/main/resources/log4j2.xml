<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info">
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5p [%t] %c{1} - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="${main:0}">
            <AppenderRef ref="Console" />
        </Root>
    </Loggers>
</Configuration>